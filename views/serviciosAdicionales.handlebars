<script>
    document.addEventListener("DOMContentLoaded", function () {
        var table = document.getElementById("tablaServicios");
        if (table) {
            var dataTable = new DataTable(table, {
                "order": [], // Puedes especificar aquí el orden inicial de las columnas
                "paging": true, // Habilita la paginación
                "lengthMenu": [5, 10, 25, 50], // Define el menú de longitud de página
                "pageLength": 10 // Establece la longitud de página inicial
            });
        }

        // Saving new service.
        var btnSaveService = document.getElementById("btnSaveService");
        if (btnSaveService) {
            btnSaveService.addEventListener("click", async (event) => {
                event.preventDefault();

                const data = {
                    service: document.getElementById("txtService").value,
                    description: document.getElementById("txtServiceDescription").value,
                    supplier: document.getElementById("txtSupplier").value,
                    serviceManager: document.getElementById("txtServiceManager").value,
                    basePrice: document.getElementById("txtBasePrice").value,
                    firstCommission: document.getElementById("txtFirstCommission").value,
                    firstUser: document.getElementById("slctFirstUser").value,
                    secondCommission: document.getElementById("txtSecondCommission").value,
                    secondUser: document.getElementById("slctSecondUser").value,
                    finalPrice: document.getElementById("txtFinalPrice").value
                };

                fetch('/api/servicios/crear-servicio', {
                    method: 'POST',
                    headers: {
                        // Once logged in, the authorization token stored in the session cookies will automatically be added in each HTTP request.
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(data => {
                    console.log('Respuesta del servidor:', data);
                })
                .catch(error => {
                    console.error('Error al enviar la solicitud:', error);
                });
            });
        }

        // Updating service info.
        var btnUpdateService = document.getElementById("btnUpdateService");
        
        // Add service name to modal when clicked.
        const editButtons = document.querySelectorAll('#tablaServicios .btn-primary');
        editButtons.forEach(function(button) {
            button.addEventListener('click', function() {
                const row = this.closest('tr');
                const serviceName = row.querySelector('td:first-child').textContent.trim();
                document.getElementById('txtServiceUpd').value = serviceName;

            });
        });
        
        if (btnUpdateService) {
            btnUpdateService.addEventListener("click", async (event) => {
                event.preventDefault();

                const data = {
                    // service: document.getElementById("txtServiceUpd").value,
                    service: "aaa",
                    description: document.getElementById("txtServiceDescriptionUpd").value,
                    supplier: document.getElementById("txtSupplierUpd").value,
                    serviceManager: document.getElementById("txtServiceManagerUpd").value,
                    basePrice: document.getElementById("txtBasePriceUpd").value,
                    firstCommission: document.getElementById("txtFirstCommissionUpd").value,
                    firstUser: document.getElementById("slctFirstUserUpd").value,
                    secondCommission: document.getElementById("txtSecondCommissionUpd").value,
                    secondUser: document.getElementById("slctSecondUserUpd").value,
                    finalPrice: document.getElementById("txtFinalPriceUpd").value
                };

                fetch('/api/servicios/editar-servicio', {
                    method: 'PUT',
                    headers: {
                        // Once logged in, the authorization token stored in the session cookies will automatically be added in each HTTP request.
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(data => {
                    console.log('Respuesta del servidor:', data);
                })
                .catch(error => {
                    console.error('Error al enviar la solicitud:', error);
                });
            });
        }
        
    });

</script>