<!-- Modal slta Sservicios -->
<div class="modal fade" id="services_entry_modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Alta de Servicios</h5>
                <button type="button" class="close" onclick="$('#services_entry_modal').modal('hide');" aria-label="Close">
                    &times;

            </div>
            <div class="modal-body">
                <div class="img-container">
                    <div class="row mt-2">
                        <div class="col-sm-12 mb-2">
                            <div class="form-group">
                                <label for="user-name">Servicio</label>
                                <input type="text" name="service-name" id="service-name" class="form-control onlydatepicker"
                                    placeholder="Nombre servicio">
                            </div>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <div class="form-group">
                                <label for="service-description">Descripción</label>
                                <input type="text" name="service-description" id="service-description" class="form-control"
                                    placeholder="Descripción">
                            </div>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <div class="form-group">
                                <label for="purchase-cost">Costo de compra</label>
                                <input type="text" name="purchase-cost" id="purchase-cost" class="form-control"
                                    placeholder="Costo de compra">
                            </div>
                        </div>
                         <div class="col-sm-12 mb-2">
                            <div class="form-group">
                                <label for="selling-cost">Costo de venta</label>
                                <input type="text" name="selling-cost" id="selling-cost" class="form-control"
                                    placeholder="Costo de venta">
                            </div>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <div class="form-group">
                                <label for="user-email">Fecha: </label>
                                <input type="date" name="user-email" id="user-email" class="form-control"
                                    placeholder="Usuario">
                            </div>
                            <div class="row">
                                <label for="user-privileges">Estatus: </label>

                            </div>
                            <div class="row">
                                <div class="col-8">
                                <select name="privileges" id="service-status" required>
                                    <option value="" selected disabled> Selecciona el estado del servicio --
                                    </option>
                                    <option value="enproceso">En Proceso</option>
                                    <option value="Pendiente">Pendiente</option>
                                    <option value="Terminado">Terminado</option>
                                </select>

                                </div>

                            </div>
                        </div>
                    </div> <!-- Cierre row -->

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="save-user-btn">Guardar Servicio</button>
            </div>
        </div>
    </div>
</div>
