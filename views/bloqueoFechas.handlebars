<script>
    document.addEventListener('click', (event) => {
        if (event.target.classList.contains('restricted') || event.target.classList.contains('blocked') || event.target.classList.contains('blocked-capacity')) {
            const description = event.target.getAttribute('data-description');
            alert(description);
        }
    });

    function goToCurrentMonth(name) {

        const currentMonthElement = document.getElementById(`current-month-calendar-container-${name}`);
        if (currentMonthElement) {
            currentMonthElement.scrollIntoView({ behavior: 'smooth' });
        }
    }

    function scrollToCurrentMonth() {
        const currentMonthName = today.toLocaleString('es-ES', { month: 'long' });
        const currentYear = today.getFullYear();

        const calendarContainers = document.querySelectorAll('[id^="calendar-container-"]');

        calendarContainers.forEach(container => {
            const monthHeaders = container.querySelectorAll('.month-header');
            monthHeaders.forEach(header => {
                if (header.textContent.trim().toLowerCase() === `${currentMonthName} ${currentYear}`.toLowerCase()) {
                    setTimeout(() => {
                        header.scrollIntoView({ behavior: 'smooth' });
                    }, 0);
                }
            });
        });
    }

    const hoyButtons = document.querySelectorAll('.hoy-btn');

    hoyButtons.forEach(button => {
        button.addEventListener('click', function (event) {
            event.preventDefault();

            const chaletName = this.getAttribute('data-chalet');

            const currentMonthName = today.toLocaleString('es-ES', { month: 'long' });
            const currentYear = today.getFullYear();

            const calendarContainer = document.getElementById(`calendar-container-${chaletName}`);

            const monthHeaders = calendarContainer.querySelectorAll('.month-header');
            monthHeaders.forEach(header => {
                if (header.textContent.trim().toLowerCase() === `${currentMonthName} ${currentYear}`.toLowerCase()) {
                    setTimeout(() => {
                        header.scrollIntoView({ behavior: 'smooth', block: "nearest", inline: "center" });
                    }, 0);
                }
            });
        });

    })

    document.addEventListener('DOMContentLoaded', function() {
        // ====== ORDENACI칍N ALFAB칄TICA Y FUNCIONALIDAD DE B칔SQUEDA ======
        
        // Funci칩n para ordenar alfab칠ticamente las habitaciones en una lista
        function ordenarHabitacionesAlfabeticamente(containerId) {
            const container = document.getElementById(containerId);
            if (!container) return;
            
            const items = Array.from(container.querySelectorAll('.form-check'));
            items.sort((a, b) => {
                const nameA = a.dataset.name.toLowerCase();
                const nameB = b.dataset.name.toLowerCase();
                return nameA.localeCompare(nameB, 'es');
            });
            
            container.innerHTML = '';
            items.forEach(item => container.appendChild(item));
        }
        
        // Ordenar listas al cargar
        ordenarHabitacionesAlfabeticamente('habitaciones-list-restriccion');
        ordenarHabitacionesAlfabeticamente('habitaciones-list-bloqueo');
        ordenarHabitacionesAlfabeticamente('habitaciones-list-capacidad');
        
        // B칰squeda para modal de restricci칩n
        const searchRestriccion = document.getElementById('search-habitaciones-restriccion');
        if (searchRestriccion) {
            searchRestriccion.addEventListener('input', function(e) {
                const searchText = e.target.value.toLowerCase();
                const items = document.querySelectorAll('.habitacion-item-restriccion');
                
                items.forEach(item => {
                    const nombre = item.dataset.name.toLowerCase();
                    item.style.display = nombre.includes(searchText) ? 'block' : 'none';
                });
            });
        }
        
        // B칰squeda para modal de bloqueo
        const searchBloqueo = document.getElementById('search-habitaciones-bloqueo');
        if (searchBloqueo) {
            searchBloqueo.addEventListener('input', function(e) {
                const searchText = e.target.value.toLowerCase();
                const items = document.querySelectorAll('.habitacion-item-bloqueo');
                
                items.forEach(item => {
                    const nombre = item.dataset.name.toLowerCase();
                    item.style.display = nombre.includes(searchText) ? 'block' : 'none';
                });
            });
        }
        
        // B칰squeda para modal de capacidad
        const searchCapacidad = document.getElementById('search-habitaciones-capacidad');
        if (searchCapacidad) {
            searchCapacidad.addEventListener('input', function(e) {
                const searchText = e.target.value.toLowerCase();
                const items = document.querySelectorAll('.habitacion-item-capacidad');
                
                items.forEach(item => {
                    const nombre = item.dataset.name.toLowerCase();
                    item.style.display = nombre.includes(searchText) ? 'block' : 'none';
                });
            });
        }
        
        // Contador para modal restricci칩n
        const checkboxesRestriccion = document.querySelectorAll('#habitaciones-list-restriccion .checkboxes-chalets');
        const counterRestriccion = document.getElementById('habitaciones-selected-count-restriccion');
        checkboxesRestriccion.forEach(cb => {
            cb.addEventListener('change', function() {
                const count = document.querySelectorAll('#habitaciones-list-restriccion .checkboxes-chalets:checked').length;
                counterRestriccion.textContent = `${count} habitaciones seleccionadas`;
            });
        });
        
        // Contador para modal bloqueo
        const checkboxesBloqueo = document.querySelectorAll('#habitaciones-list-bloqueo .checkboxes-chalets-block');
        const counterBloqueo = document.getElementById('habitaciones-selected-count-bloqueo');
        checkboxesBloqueo.forEach(cb => {
            cb.addEventListener('change', function() {
                const count = document.querySelectorAll('#habitaciones-list-bloqueo .checkboxes-chalets-block:checked').length;
                counterBloqueo.textContent = `${count} habitaciones seleccionadas`;
            });
        });
        
        // Contador para modal capacidad
        const checkboxesCapacidad = document.querySelectorAll('#habitaciones-list-capacidad .checkboxes-chalets-block');
        const counterCapacidad = document.getElementById('habitaciones-selected-count-capacidad');
        checkboxesCapacidad.forEach(cb => {
            cb.addEventListener('change', function() {
                const count = document.querySelectorAll('#habitaciones-list-capacidad .checkboxes-chalets-block:checked').length;
                counterCapacidad.textContent = `${count} habitaciones seleccionadas`;
            });
        });
        
        // ====== SELECCI칍N DE HABITACI칍N EN CALENDARIO ======
        
        const selectHabitacion = document.getElementById('habitacion-select');
        const calendarContainers = document.querySelectorAll('[id^="calendar-container-"]');
        const namesContainers = document.querySelectorAll('.names-container')

        
        selectHabitacion.addEventListener('change', function() {
            const selectedHabitacionId = selectHabitacion.value;

            // Oculta todos los contenedores de habitaciones
            calendarContainers.forEach(container => {
                if(!container.classList.contains('d-none')) {
                    container.classList.add('d-none');
                }
            });
            namesContainers.forEach(container => {
                if(!container.classList.contains('d-none')) {
                    container.classList.add('d-none');
                }
            })
            console.log(selectedHabitacionId);
            // Si se seleccion칩 una habitaci칩n, mostrar el contenedor correspondiente
            if (selectedHabitacionId) {
                const selectedHabitacionContainer = document.getElementById(`calendar-container-${selectedHabitacionId}`);
                const namesContainer = document.getElementById(`names-container-${selectedHabitacionId}`);
                if (selectedHabitacionContainer) {
                    console.log(selectedHabitacionContainer)
                    selectedHabitacionContainer.classList.remove('d-none');
                    namesContainer.classList.remove('d-none');
                }
            }
        });
    })
</script>

