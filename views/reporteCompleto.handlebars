/**
 * Genera el reporte Excel de inversionistas llamando al endpoint y procesando los datos
 */
async function generarReporteInversionistas() {
    // Obtener valores de las fechas
    const fechaInicio = document.getElementById('fechaInicioInversionistas').value;
    const fechaFin = document.getElementById('fechaFinInversionistas').value;

    // Validar que ambas fechas estén seleccionadas
    if (!fechaInicio || !fechaFin) {
        mostrarMensaje('Por favor selecciona ambas fechas', 'error', true);
        return;
    }

    // Validar que fecha inicio sea menor o igual a fecha fin
    if (new Date(fechaInicio) > new Date(fechaFin)) {
        mostrarMensaje('La fecha de inicio debe ser anterior a la fecha fin', 'error', true);
        return;
    }

    // Mostrar indicador de carga y deshabilitar botón
    mostrarLoading(true, true);
    const btnGenerar = document.getElementById('btnGenerarReporteInversionistas');
    btnGenerar.disabled = true;
    btnGenerar.classList.add('opacity-50', 'cursor-not-allowed');

    try {
        // Hacer petición al endpoint de inversionistas
        const response = await fetch(`/api/reportes/inversionistas?fechaInicio=${fechaInicio}&fechaFin=${fechaFin}`);
        
        if (!response.ok) {
            throw new Error(`Error en la respuesta del servidor: ${response.status}`);
        }

        const data = await response.json();

        // Verificar si la respuesta fue exitosa
        if (!data.success) {
            throw new Error(data.error || 'Error al obtener los datos del reporte');
        }

        // Verificar si hay datos
        if (!data.data || data.data.length === 0) {
            mostrarMensaje('No se encontraron utilidades en el rango de fechas seleccionado', 'warning', true);
            return;
        }

        // Generar el archivo Excel
        await crearArchivoExcelInversionistas(data, fechaInicio, fechaFin);

        // Mostrar mensaje de éxito
        mostrarMensaje(`Reporte de inversionistas generado exitosamente. Total de registros: ${data.data.length}`, 'success', true);

    } catch (error) {
        console.error('Error al generar el reporte de inversionistas:', error);
        mostrarMensaje(`Error al generar el reporte: ${error.message}`, 'error', true);
    } finally {
        // Ocultar indicador de carga y habilitar botón
        mostrarLoading(false, true);
        btnGenerar.disabled = false;
        btnGenerar.classList.remove('opacity-50', 'cursor-not-allowed');
    }
}

/**
 * Crea el archivo Excel con los datos del reporte de inversionistas
 * @param {Object} data - Datos del reporte (data, totales, headers, metadata)
 * @param {string} fechaInicio - Fecha de inicio del reporte
 * @param {string} fechaFin - Fecha fin del reporte
 */
async function crearArchivoExcelInversionistas(data, fechaInicio, fechaFin) {
    // Crear un nuevo libro de trabajo
    const workbook = XLSX.utils.book_new();

    // Crear array para los datos de la hoja
    const worksheetData = [];

    // 1. Agregar fila de headers
    const headerRow = data.headers.map(h => h.label);
    worksheetData.push(headerRow);

    // 2. Agregar filas de datos
    data.data.forEach(registro => {
        const row = data.headers.map(header => {
            const valor = registro[header.key];
            
            // Formatear valores según el tipo
            if (valor === null || valor === undefined) return '';
            
            // Si es una fecha, mantener el formato DD/MM/YYYY
            if (header.key.includes('fecha') || header.key.includes('Fecha')) {
                return valor;
            }
            
            // Si es un número, retornar el valor numérico
            if (typeof valor === 'number') {
                return valor;
            }
            
            return valor;
        });
        worksheetData.push(row);
    });

    // 3. Agregar fila de totales
    const totalesRow = [];
    data.headers.forEach((header, index) => {
        if (index === 0) {
            totalesRow.push('TOTALES');
        } else if (header.key === 'noches') {
            totalesRow.push(data.totales.totalNoches || 0);
        } else if (header.key === 'monto') {
            totalesRow.push(data.totales.totalMonto || 0);
        } else {
            totalesRow.push('');
        }
    });
    worksheetData.push(totalesRow);

    // Crear la hoja de trabajo
    const worksheet = XLSX.utils.aoa_to_sheet(worksheetData);

    // Establecer anchos de columna
    worksheet['!cols'] = data.headers.map(h => ({ wch: h.width || 15 }));

    // Aplicar estilos a las celdas
    const range = XLSX.utils.decode_range(worksheet['!ref']);
    
    // Columnas monetarias (necesitan formato de moneda)
    const columnasMonetarias = ['monto'];

    // Mapear índices de columnas monetarias
    const indicesMonetarios = data.headers
        .map((h, idx) => columnasMonetarias.includes(h.key) ? idx : -1)
        .filter(idx => idx !== -1);

    // Aplicar formato a cada celda
    for (let R = range.s.r; R <= range.e.r; ++R) {
        for (let C = range.s.c; C <= range.e.c; ++C) {
            const cellAddress = XLSX.utils.encode_cell({ r: R, c: C });
            
            // Asegurar que la celda existe
            if (!worksheet[cellAddress]) {
                worksheet[cellAddress] = { t: 's', v: '' };
            }

            // Estilo para header (fila 0)
            if (R === 0) {
                worksheet[cellAddress].s = {
                    font: { bold: true, color: { rgb: "FFFFFF" } },
                    fill: { fgColor: { rgb: "16A34A" } }, // Verde para inversionistas
                    alignment: { horizontal: "center", vertical: "center" },
                    border: {
                        top: { style: "thin", color: { rgb: "000000" } },
                        bottom: { style: "thin", color: { rgb: "000000" } },
                        left: { style: "thin", color: { rgb: "000000" } },
                        right: { style: "thin", color: { rgb: "000000" } }
                    }
                };
            }
            // Estilo para fila de totales (última fila)
            else if (R === range.e.r) {
                worksheet[cellAddress].s = {
                    font: { bold: true },
                    fill: { fgColor: { rgb: "D1FAE5" } }, // Verde claro para totales
                    alignment: { 
                        horizontal: indicesMonetarios.includes(C) ? "right" : "left",
                        vertical: "center" 
                    },
                    border: {
                        top: { style: "thin", color: { rgb: "000000" } },
                        bottom: { style: "thin", color: { rgb: "000000" } },
                        left: { style: "thin", color: { rgb: "000000" } },
                        right: { style: "thin", color: { rgb: "000000" } }
                    }
                };
                
                // Aplicar formato de moneda a columnas monetarias en totales
                if (indicesMonetarios.includes(C) && typeof worksheet[cellAddress].v === 'number') {
                    worksheet[cellAddress].z = '$#,##0.00';
                }
            }
            // Estilo para datos normales
            else {
                // Alternar colores de fila para mejor lectura
                const colorFila = R % 2 === 0 ? 'F0FDF4' : 'FFFFFF';
                
                worksheet[cellAddress].s = {
                    fill: { fgColor: { rgb: colorFila } },
                    alignment: { 
                        horizontal: indicesMonetarios.includes(C) ? "right" : "left",
                        vertical: "center" 
                    },
                    border: {
                        top: { style: "thin", color: { rgb: "E5E7EB" } },
                        bottom: { style: "thin", color: { rgb: "E5E7EB" } },
                        left: { style: "thin", color: { rgb: "E5E7EB" } },
                        right: { style: "thin", color: { rgb: "E5E7EB" } }
                    }
                };
                
                // Aplicar formato de moneda a columnas monetarias
                if (indicesMonetarios.includes(C) && typeof worksheet[cellAddress].v === 'number') {
                    worksheet[cellAddress].z = '$#,##0.00';
                }
            }
        }
    }

    // Agregar la hoja al libro
    XLSX.utils.book_append_sheet(workbook, worksheet, "Inversionistas");

    // =============================================================================
    // HOJA 2: METADATA
    // =============================================================================

    const metadataData = [
        ['INFORMACIÓN DEL REPORTE DE INVERSIONISTAS'],
        [],
        ['Rango de fechas:', `${fechaInicio} - ${fechaFin}`],
        ['Fecha de generación:', data.metadata.fechaGeneracion],
        ['Total de registros:', data.metadata.totalRegistros],
        [],
        ['TOTALES GENERALES'],
        [],
        ['Total Registros:', data.totales.totalRegistros],
        ['Total Noches:', data.totales.totalNoches],
        ['Total Monto:', data.totales.totalMonto]
    ];

    const metadataSheet = XLSX.utils.aoa_to_sheet(metadataData);

    // Estilos para metadata
    metadataSheet['!cols'] = [{ wch: 30 }, { wch: 30 }];

    // Aplicar estilos al título
    if (metadataSheet['A1']) {
        metadataSheet['A1'].s = {
            font: { bold: true, sz: 14 },
            fill: { fgColor: { rgb: "16A34A" } },
            alignment: { horizontal: "center" }
        };
    }

    // Aplicar estilos a los subtítulos
    if (metadataSheet['A7']) {
        metadataSheet['A7'].s = {
            font: { bold: true, sz: 12 },
            fill: { fgColor: { rgb: "86EFAC" } }
        };
    }

    // Aplicar formato de moneda al total de monto
    if (metadataSheet['B11'] && typeof metadataSheet['B11'].v === 'number') {
        metadataSheet['B11'].z = '$#,##0.00';
    }

    // Agregar la hoja de metadata al libro
    XLSX.utils.book_append_sheet(workbook, metadataSheet, "Metadata");

    // =============================================================================
    // DESCARGAR EL ARCHIVO
    // =============================================================================

    const nombreArchivo = `Reporte_Inversionistas_${fechaInicio}_${fechaFin}.xlsx`;
    XLSX.writeFile(workbook, nombreArchivo);
}

