/**
 * Muestra un mensaje de estado al usuario
 * @param {string} mensaje - Texto del mensaje
 * @param {string} tipo - Tipo de mensaje (success, error, warning, info)
 * @param {boolean} esInversionistas - Si es true, muestra el mensaje en la sección de inversionistas
 */
function mostrarMensaje(mensaje, tipo, esInversionistas = false) {
    const mensajeDiv = document.getElementById(esInversionistas ? 'mensajeEstadoInversionistas' : 'mensajeEstado');
    
    // Colores según el tipo de mensaje (tema oscuro)
    const colores = {
        success: 'bg-green-900/30 border-green-500 text-green-300',
        error: 'bg-red-900/30 border-red-500 text-red-300',
        warning: 'bg-yellow-900/30 border-yellow-500 text-yellow-300',
        info: 'bg-blue-900/30 border-blue-500 text-blue-300'
    };

    // Iconos según el tipo de mensaje
    const iconos = {
        success: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>',
        error: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>',
        warning: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>',
        info: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>'
    };

    // Color del icono según el tipo
    const colorIcono = {
        success: 'text-green-400',
        error: 'text-red-400',
        warning: 'text-yellow-400',
        info: 'text-blue-400'
    };

    mensajeDiv.innerHTML = `
        <div class="border-l-4 p-4 rounded-r-lg ${colores[tipo] || colores.info}">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 ${colorIcono[tipo] || colorIcono.info}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        ${iconos[tipo] || iconos.info}
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium">${mensaje}</p>
                </div>
            </div>
        </div>
    `;
    
    mensajeDiv.classList.remove('hidden');

    // Ocultar el mensaje después de 5 segundos
    setTimeout(() => {
        mensajeDiv.classList.add('hidden');
    }, 5000);
}

/**
 * Muestra u oculta el indicador de carga
 * @param {boolean} mostrar - true para mostrar, false para ocultar
 * @param {boolean} esInversionistas - Si es true, muestra el loading en la sección de inversionistas
 */
function mostrarLoading(mostrar, esInversionistas = false) {
    const loadingDiv = document.getElementById(esInversionistas ? 'loadingIndicatorInversionistas' : 'loadingIndicator');
    if (mostrar) {
        loadingDiv.classList.remove('hidden');
    } else {
        loadingDiv.classList.add('hidden');
    }
}

