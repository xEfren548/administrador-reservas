<div class="row bg-dark text-white w-100 m-0 py-3 mb-5">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <h1>Roles</h1>
        <a class="btn btn-primary" href="/roles/new">Crear rol</a>
    </div>
</div>



<div class="row ml-2">
    <table class="table table-hover table-dark" id="table-roles">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each roles}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>
                    <a class="btn btn-primary" href="/roles/{{this.id}}/edit">Editar</a>
                    <a class="btn btn-danger" href="/roles/{{this.id}}/delete">Eliminar</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const table = new DataTable('#table-roles');

    })
</script>
